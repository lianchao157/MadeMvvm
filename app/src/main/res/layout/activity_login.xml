<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvvmnews.ui.login.LoginActivity">

    <ImageView
        android:id="@+id/ivtitle"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:src="@mipmap/showmenum"
        android:layout_marginTop="30px"
        />

    <EditText
        android:id="@+id/ed_accunt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/enter_account" />

    <View
        android:id="@+id/view_account"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/ed_accunt"
        android:background="@color/darker_gray" />


    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_account"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="登陆"
        android:textSize="30px"
        android:inputType="numberPassword" />

    <View
        android:id="@+id/view_pass"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/ed_pass"
        android:background="@color/darker_gray" />


    <Button
        android:id="@+id/btn_longin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/view_pass"
        android:layout_margin="20dp"
        android:layout_marginBottom="100dp"
        android:text="@string/login"
        android:background="@drawable/snackbar_action_bg_focused"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/btn_regin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/view_pass"
        android:layout_margin="20dp"
        android:layout_marginBottom="100dp"
        android:text="@string/regin"
        android:background="@drawable/snackbar_action_bg_focused"
        android:textColor="@color/black" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    >

    <ImageView
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/min"   ></ImageView>
    <ImageView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/min"   ></ImageView>

    <ImageView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/min"></ImageView>
</LinearLayout>
</LinearLayout>